<?xml version="1.0" encoding="utf-8"?>
<cn.memedai.swipetoloadlayout.integration.wallet.WalletHeader
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorRefreshBackground"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/wallet_head_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <cn.memedai.swipetoloadlayout.integration.wallet.WalletRefreshView
            android:id="@+id/swipe_to_load_wallet_refresh_view"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
</cn.memedai.swipetoloadlayout.integration.wallet.WalletHeader>