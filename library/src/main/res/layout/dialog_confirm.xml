<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_36dp"
    android:paddingRight="@dimen/dimen_36dp">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:background="@drawable/shape_top_item_btn"
        android:gravity="center"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/color_text_black"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLength="15"
        android:text="@string/text_confirm"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color_divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_blue"
            android:text="@string/text_cancel"
            android:background="@drawable/selector_left_btn"/>

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="match_parent"
            android:background="@color/color_divider"/>

        <TextView
            android:id="@+id/confirm_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_blue"
            android:text="@string/text_confirm"
            android:background="@drawable/selector_right_btn"/>
    </LinearLayout>
</LinearLayout>